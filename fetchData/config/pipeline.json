  "pokemon_types": [
    "normal", "fighting", "flying", "poison", "ground", "rock", 
    "bug", "ghost", "steel", "fire", "water", "grass", 
    "electric", "psychic", "ice", "dragon", "dark", "fairy"
  ],
  "logging": {
    "level": "info",
    "timestamp_format": "ISO",
    "colors": {
      "info": "blue",
      "success": "green", 
      "warning": "yellow",
      "error": "red",
      "debug": "gray"
    }
  }
